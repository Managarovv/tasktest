// ---------------------------
// Владельцы магазинов
// ---------------------------
model Owner {
  id        Int       @id @default(autoincrement())
  name      String
  email     String?   @unique
  phone     String?
  address   String?
  stores    Store[]   // Один владелец может иметь несколько магазинов
  createdAt DateTime  @default(now())
}

// ---------------------------
// Магазины
// ---------------------------
model Store {
  id        Int        @id @default(autoincrement())
  name      String
  address   String
  login     String     @unique
  password  String
  ownerId   Int
  owner     Owner      @relation(fields: [ownerId], references: [id])
  terminals Terminal[]
  requests  TerminalRequest[]
  createdAt DateTime   @default(now())
}

// ---------------------------
// Терминалы ККМ
// ---------------------------
model Terminal {
  id        Int           @id @default(autoincrement())
  mac       String        @unique
  status    TerminalStatus @default(ACTIVE)
  storeId   Int
  store     Store         @relation(fields: [storeId], references: [id])
  createdAt DateTime      @default(now())
}

enum TerminalStatus {
  ACTIVE
  INACTIVE
}

// ---------------------------
// Заявки на подключение терминалов
// ---------------------------
model TerminalRequest {
  id          Int           @id @default(autoincrement())
  requestedAt DateTime      @default(now())
  mac         String
  storeId     Int
  store       Store         @relation(fields: [storeId], references: [id])
  status      RequestStatus @default(PENDING)
  comment     String?
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}
