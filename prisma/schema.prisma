// schema.prisma
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------------------------
// Администраторы
// ---------------------------
model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(MANAGER)
  refreshtoken String?
  createdAt DateTime @default(now())
}

enum Role {
  MANAGER
  ROOT
}

